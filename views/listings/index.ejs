<% layout("/layouts/boilerplate") %>
<body>
  <style>
    /*  Horizontal Scrolling Menu */

    .filters {
      white-space: nowrap;
      overflow-x: auto;
      background: #f0f0f0;
      padding: 10px 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .filter i{
      font-size: 1.5rem;
    }
    .filter {
      display: inline;
      text-align: center;
      padding: 10px 20px;
      width: 200px;
      margin: 0 10px;
      font-size: 20px;
      background: #fff;
      box-shadow: 1 2px 5px rgba(0,0,0,0.1);
      border-radius: 10px;
    }
    .filter.active {
      background-color: #007bff;
      color: white;
    }
    
    .filters::-webkit-scrollbar {
      display: none;
    }
    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }
    .filter p {
      font-size: 0.8rem;
      color: #333;
    }

    .carousel-inner img{
      width: 100%;
      height: 30rem;
      object-fit: cover;
    }

    .row {
      display:flex;
      flex-wrap: wrap;
      gap: 0;
    }
  
    .col {
      flex: 1 1 calc(33.33% - 1rem); /* 3 columns on large screens */
      box-sizing: border-box;
    }
  
    @media (max-width: 768px) {
      .col {
        flex: 1 1 calc(50% - 1rem); /* 2 columns on medium screens */
      }
    }
  
    @media (max-width: 576px) {
      .col {
        flex: 1 1 100%; /* 1 column on small screens */
      }
    }
  
    .listing-card {
      display: block;
    }
  
    .listing-card img {
      width: 100%;
      height: 20rem;
      object-fit: cover;
    }
    

  </style>


  <!-- Horizontal Scrolling Menu -->

  
  <div class="filters" id="filters">
